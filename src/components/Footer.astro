---
import { t } from "../utils/i18n";
import { getLangFromUrl } from "../utils/i18n";
import disabledIcon from "../assets/disabled.svg";
const lang = getLangFromUrl(Astro.url);
---

<footer class="bg-white pt-20 pb-14 border-t border-gray-200">
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center">
      <!-- Logo Text -->
      <div class="mb-8 text-center">
        <h2 class="text-4xl font-cormorant italic mb-4">
          {t(lang, "footer.title")}
        </h2>
        <div class="space-y-1">
          <p class="text-gray-700 tracking-widest text-sm">
            {t(lang, "footer.subtitle")}
          </p>
          <p class="text-gray-700 tracking-widest text-sm">
            {t(lang, "footer.subtitle2")}
          </p>
        </div>
      </div>

      <!-- Separator -->
      <div class="w-16 h-px bg-gray-300 mb-8"></div>

      <!-- Contact Info -->
      <div class="text-center mb-8 space-y-2">
        <p class="text-gray-700">
          <a
            href="tel:0467972773"
            class="hover:text-[#9B8579] transition-colors"
            >{t(lang, "footer.phone1")}</a
          >
        </p>
        <p class="text-gray-700">
          <a
            href="tel:0630106915"
            class="hover:text-[#9B8579] transition-colors"
            >{t(lang, "footer.phone2")}</a
          >
        </p>
        <div class="mt-4">
          <p class="text-gray-700">{t(lang, "footer.address.line1")}</p>
          <p class="text-gray-700">{t(lang, "footer.address.line2")}</p>
        </div>
      </div>

      <!-- Separator -->
      <div class="w-16 h-px bg-gray-300 mb-8"></div>

      <!-- Google Maps -->
      <div class="w-full max-w-2xl mb-8">
        <div class="relative w-full" style="padding-bottom: 56.25%;">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2889.9888743658094!2d2.874985376919791!3d43.58594807110539!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12b191c1ddd7e559%3A0xf51a558d964400f8!2sAuberge%20de%20Mauroul!5e0!3m2!1sfr!2sfr!4v1750077316883!5m2!1sfr!2sfr" 
            class="absolute top-0 left-0 w-full h-full rounded-lg shadow-md"
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>

      <!-- Separator -->
      <div class="w-16 h-px bg-gray-300 mb-8"></div>

      <!-- Opening Hours -->
      <div class="text-center mb-2">
        <p class="text-gray-700">
          {t(lang, "footer.opening")}
        </p>
      </div>

      <!-- Payment Methods and Accessibility -->
      <div class="text-center mb-8 space-y-3">
        <div class="flex items-center justify-center gap-2 text-gray-700">
          <span>{t(lang, "footer.payments.title")}</span>
          <span>{t(lang, "footer.payments.card")}</span>
          <span>•</span>
          <span>{t(lang, "footer.payments.check")}</span>
          <span>•</span>
          <span>{t(lang, "footer.payments.cash")}</span>
        </div>
        <div class="flex items-center justify-center gap-2 text-gray-700">
          <img 
            src={disabledIcon.src} 
            alt="Wheelchair access icon" 
            class="w-6 h-6"
          />
          <span>{t(lang, "footer.accessibility")}</span>
        </div>
      </div>

      <!-- Separator -->
      <div class="w-16 h-px bg-gray-300 mb-8"></div>

      <!-- Social Links -->
      <div class="flex justify-center space-x-8">
        <a
          href="https://www.facebook.com/Auberge-de-Mauroul-108499718115027"
          target="_blank"
          class="text-gray-600 hover:text-[#9B8579] transition-colors relative group"
        >
          {t(lang, "footer.social.facebook")}
          <span
            class="absolute -bottom-1 left-0 w-0 h-px bg-[#9B8579] transition-all group-hover:w-full"
          ></span>
        </a>

        <a
          href="https://www.tripadvisor.fr/Restaurant_Review-g196600-d3487164-Reviews-L_Auberge_de_Mauroul-Beziers_Herault_Occitanie.html"
          target="_blank"
          class="text-gray-600 hover:text-[#9B8579] transition-colors relative group"
        >
          {t(lang, "footer.social.tripadvisor")}
          <span
            class="absolute -bottom-1 left-0 w-0 h-px bg-[#9B8579] transition-all group-hover:w-full"
          ></span>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .font-cormorant {
    font-family: "Cormorant Garamond", serif;
  }
</style>
